<%- include("partials/header.ejs") %>

    <div class="container-fluid">
        <div class="row">
            <form action="/registerUser" method="POST" class="col-md-6 col-sm-12 right-border p-4 d-flex flex-column justify-content-center align-items-center">
                <h1 class="p-4 form-heading poppins-600">Create User</h1>
                <div class="form-group mx-auto w-75 px-5 m-1">
                    <label for="createUserId ">User ID</label>
                    <input type="text" name="createUserId" class="form-control w-100" id="createUserId">
                </div>
                <div class="form-group mx-auto w-75 px-5 m-1">
                    <label for="createPassword">Password</label>
                    <input type="password" name="createPassword" class="form-control w-100" id="createPassword">
                </div>
                <div class="mx-auto w-75 px-5 m-1">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>


            <form action="/admin-dashboard" method="POST" class="view-user col-md-6 col-sm-12 p-2 d-flex flex-column justify-content-center align-items-center">

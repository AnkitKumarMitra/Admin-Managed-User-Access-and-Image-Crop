                    <h1 class="p-4 form-heading poppins-600">View User</h1>
                    <div class="form-group mx-auto w-75 p-5 m-1">
                        <input type="number" name="user1" class="form-control w-100">
                    </div>
                    <div class="form-group mx-auto w-75 p-5 m-1">
                        <input type="number" name="user2" class="form-control w-100">
                    </div>
                    <div class="mx-auto w-75 m-1 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary w-25">View</button>
                    </div>
                </div>
            </form>
        </div>
